    <script type='text/javascript'>
    function shutdown_action(action, pass="", message="", time=0, value=-9999)
    {
    var pass_str = ""
    if (pass!=""){pass_str="&password="+pass}
    var value_str = ""
    if (value != -9999) {value_str='&value='+value}

    window.location.replace('/?action='+action+''+ pass_str+'&message='+message+'&time='+time+''+value_str)
    }
    </script>
